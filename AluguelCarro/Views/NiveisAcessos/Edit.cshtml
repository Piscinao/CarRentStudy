@model AluguelCarro.Models.NiveisAcesso

@{
    ViewData["Title"] = "Atualizar nível de acesso" + Model.Name;
}


<div class="border border-light rounded show col-md-8">
    <div class="container">
        <h3 class="titulo"><i class="fas fa-user-lock fa-lg"></i>Atualizar Nivel de Acesso</h3>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />
                    <div class="campos">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control form-control-lg" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="campos">
                        <label asp-for="Descricao" class="control-label"></label>
                        <textarea asp-for="Descricao" class="form-control form-control-lg" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>


                    <div class="form-group botoes">
                        <input type="submit" value="Salvar" class="btn btn-outline-success btn-lg" /> &nbsp;
                        <a asp-action="Index" class="btn btn-link btn-lg">Voltar</a>
                    </div>
                </form>
            </div>
        </div>



        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
